{
  "name": "chashier-monorepo",
  "private": true,
  "packageManager": "pnpm@9.4.0",
  "scripts": {
    "api:build": "pnpm -C apps/api build",
    "api:dev": "pnpm -C apps/api dev",
    "api:start:prod": "pnpm -C apps/api start:prod",
    "api:db:migrate": "pnpm -C apps/api db:migrate",
    "api:db:revert": "pnpm -C apps/api db:revert",
    "api:db:show": "pnpm -C apps/api db:show",

    "web:dev": "pnpm -C apps/web dev",
    "web:build": "pnpm -C apps/web build",
    "web:start": "pnpm -C apps/web start"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "eslint": "9.7.0",
    "prettier": "3.3.3",
    "turbo": "2.0.5",
    "typescript": "5.5.4"
  }
}